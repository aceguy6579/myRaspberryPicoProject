from machine import UART
import time

uart = UART(0, 9600)  # UART0 사용 (TX=GP0, RX=GP1)
print("UART Loopback Test Start")

while True:
    msg = "Hello UART!\r\n"
    uart.write(msg)
    time.sleep(1)
    
    if uart.any():
        received = uart.read().decode('utf-8')
        print("Received:", received)
