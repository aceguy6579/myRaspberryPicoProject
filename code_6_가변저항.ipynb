    "import machine\n",
    "from utime import sleep\n",
    "\n",
    "analog_value = machine.ADC(0) # 0번 채널에 가변저항 연결\n",
    "\n",
    "while True:\n",
    "    reading = analog_value.read_u16() # 16비트값으로 반환\n",
    "    print(\"ADC: \", reading)\n",
    "    sleep(0.5)"
   ]
